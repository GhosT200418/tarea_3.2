def es_primo(numero):
    if numero < 2:
        return False
    for i in range(2, int(numero ** 0.5) + 1):
        if numero % i == 0:
            return False
    return True

def factorial(numero):
    fact = 1
    for i in range(1, numero + 1):
        fact *= i
    return fact

def es_palindromo(frase):
    frase = frase.lower().replace(" ", "")
    return frase == frase[::-1]

